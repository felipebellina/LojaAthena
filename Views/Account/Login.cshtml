@model LoginViewModel


<div class="row">
    <div class="col-md-6" style="margin-left: 50px">
        <div class="comment-respond">
            <h3>Login</h3>
            <form asp-controller="Account" asp-action="Login" method="post" class="form-group" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />

                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="u-full-width" class="form-control">

                <label asp-for="Password"></label>
                <input asp-for="Password" class="u-full-width" class="form-control">
            
                <button type="submit" class="btn btn-dark btn-medium">Log in</button>
            </form>
        </div>
    </div>
</div>





